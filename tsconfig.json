{
  "compilerOptions": {
    "target": "ESNext",
    "baseUrl": "src",
    "paths": {
      "@componentLib": [
        "./componentLib"
      ],
      "@utils": [
        "./utils"
      ],
      "@components": [
        "./components"
      ],
      "@internalTypes": [
        "./types"
      ],
      "@shared": [
        "./shared"
      ]
    },
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}